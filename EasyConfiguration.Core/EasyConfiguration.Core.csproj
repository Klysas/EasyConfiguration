<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net6.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <Version>0.1</Version>
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
    <Title>EasyConfiguration.Core</Title>
    <PackageId>EasyConfiguration.Core</PackageId>
    <Authors>Klysas</Authors>
    <Product>$(Tite)</Product>
    <PackageProjectUrl>https://github.com/Klysas/EasyConfiguration</PackageProjectUrl>
    <Description>Easy way to access project parameters that come from environment variables and .ini files.</Description>
    <RepositoryUrl>https://github.com/Klysas/EasyConfiguration</RepositoryUrl>
    <PackageTags>config;configuration;ini;parser;inifile;file;environment;easy;simple</PackageTags>
    <PackageLicenseFile>LICENSE.txt</PackageLicenseFile>
    <PackageReadmeFile>README.md</PackageReadmeFile>
  </PropertyGroup>

  <ItemGroup>
    <None Include="..\LICENSE.txt">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
    <None Include="..\README.md">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="ini-parser-netcore" Version="3.0.0" />
    <PackageReference Include="Microsoft.Extensions.Configuration.Abstractions" Version="8.0.0" />
    <PackageReference Include="Microsoft.Extensions.DependencyInjection.Abstractions" Version="8.0.0" />
    <PackageReference Include="Microsoft.Extensions.Logging.Abstractions" Version="8.0.0" />
  </ItemGroup>

</Project>
